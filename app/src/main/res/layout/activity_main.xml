<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.po.sample.asgn14hanoi.MainActivity">

        <com.po.sample.asgn14hanoi.PillarLayout
            android:id="@+id/pillar_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFEEDDDD">

        </com.po.sample.asgn14hanoi.PillarLayout>

        <com.po.sample.asgn14hanoi.PillarLayout
            android:id="@+id/pillar_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFDDEEDD">

        </com.po.sample.asgn14hanoi.PillarLayout>

        <com.po.sample.asgn14hanoi.PillarLayout
            android:id="@+id/pillar_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFDDDDEE">

        </com.po.sample.asgn14hanoi.PillarLayout>
    </LinearLayout>
</layout>